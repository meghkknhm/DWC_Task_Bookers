<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= book.title %>
        </td>
        <td>
          <%= book.body %>
        </td>

        <td>
          <%= link_to "Show",todolist_path(book.id) %>
          <%= link_to "Edit", edit_todolist_path(book.id) %>
          <%= link_to "Destroy", destroy_todolist_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>New book</h3>
<%= form_with model: @book, url:'/todolists', local:true do |f| %>
<% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved<br>
    <% @book.errors.full_messages.each do |message| %>
      <%= message %><br>
    <% end %>
  <% end %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <br><%= f.submit 'Create Book' %></br>
<% end %>